<Window x:Class="project.FieldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="FieldGrid" Grid.Column="1" Grid.Row="1">
        </Grid>
        <Label Grid.Row="0" Grid.Column="1" Content="Active Player: " x:Name="TurnLabel" Margin="0,7,0,0"  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Width="230"  ></Label>
    </Grid>
</Window>
